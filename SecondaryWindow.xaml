<Window x:Class="Armandaa.SecondaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Armandaa"
        mc:Ignorable="d"
        Title="Monitor Screen" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="outputTextBox" FontSize="100"/>
        <StackPanel>
            <TextBlock Text="{Binding TextValue, Mode=OneWay}" Background="LightGray" FontSize="60" />
        </StackPanel>
    </Grid>
    
</Window>
